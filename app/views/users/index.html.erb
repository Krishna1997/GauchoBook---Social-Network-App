<div class="users-index">
  <h1>All Users</h1>

  <div class="all-users">
    <div class="users-grid">
      <% @users.each do |user| %>
        <% next if user == current_user %>
          <div class="users-index-user">
            <%= link_to user_path(user) do %>
              <%= user.username %>

                <% if current_user.requesters.where('requests.accepted = ?', false).include?(user) %>
                  <%= link_to "Confirm", request_path(id: current_user.received_requests.find_by(requester_id: user.id).id, request: { requester_id: user.id }), method: :put %>
                <% elsif current_user.requesters.include?(user) %>
                <% elsif !current_user.requestees.include?(user) %>
                  <%= link_to "Add Friend", requests_path(request: { requestee_id: user.id }), method: :post, class: "add-friend-button users-index-button" %>
                <% else %>
                  <%= "Message" %>
                <% end %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
