<div class="welcome-page">
	<div class="welcome-header">
		<div class="welcome-msg">
			<h1>Welcome to</h1>
		</div>
		<div class="welcome-logo">
			<img src="/Welcome_GB.png" alt="rss feed" />
		</div>
	</div>
	<div class="login-part">
	   <h1>Login</h1>
	   <%= form_tag '/login' do %>
		   <div class="login-form">
			   <div class="login-username">
				   <%= label_tag :username%>
				   <%= text_field_tag :username%>
				</div>
				<div class="login-password">
				   <%= label_tag :password%>
				   <%= password_field_tag :password%>
				</div>
				<div class="login-submit">
			    <%= submit_tag "Login", class:"login", :style=> 'background-color: rgb(00,36,60); width: 100%; color: #FFD700;height:25px;'%>
				</div>
			</div>
		<%end%>
	</div>
	
	<div class="signup-form">
		<h1>Sign Up</h1>
		<%= form_for @user do |f|%>
			<div class="signup-username">
				<%= f.label :username, class:"form-text-field", :style=> 'display: none;' %><br>
				<%= f.text_field :username, placeholder: "Choose a username", class:"form-text-field", :style=> 'width: 100%; height: 30px;'%><br>
			</div>
			<div class="signup-firstname">
				<%= f.label :firstname, class:"form-text-field", :style=> 'display: none;' %><br>
				<%= f.text_field :firstname, placeholder: "Your firstname", class:"form-text-field", :style=> 'width: 100%; height: 30px;'%><br>
			</div>
			<div class="signup-lastname">
				<%= f.label :lastname, class:"form-text-field", :style=> 'display: none;' %><br>
				<%= f.text_field :lastname, placeholder: "Your lastname", class:"form-text-field", :style=> 'width: 100%; height: 30px;'%><br>
			</div>
			<div class="signup-dob">
				<div class="dob-label">
					<%= f.label :DOB%><br>
				</div>
				<div class="dob">
					<%= f.text_field :DOB, type: :date%><br>
				</div>
			</div>
			<div class="signup-password">
				<%= f.label :password, class:"form-text-field", :style=> 'display: none;' %><br>
				<%= f.password_field :password, placeholder: "Choose a password", class:"form-text-field", :style=> 'width: 100%; height: 30px;'%><br>
			</div>
			<div class="signup-submit">
				<%= f.submit "Signup", class:"signup", :style=> 'background-color: rgb(00,36,60); width: 100%; color: #FFD700;height: 30px;'%>
			</div>
		<%end%>
	</div>
</div>