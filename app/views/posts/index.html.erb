 <div class="body">
    
    <div class="navbar">
        <div class="logo">
          <img src="/Icon_GB.png" alt="rss feed" />
        </div>
        <div class="link-all-users">
          <%= link_to 'All Users', users_path, :style=> 'color:#FFD700;text-decoration: none;padding: 5px;' %>
        </div>
        <div class="search-bar">
              <%= form_tag '/users', :method => 'get' do %>
               <div class="search-form">
                 <div class="search-user">
                   <%= text_field_tag :search, params[:search], placeholder: "Search..." %>                 
                </div>
              </div>
            <%end%>       
        </div>        
        <div class="link-home">
          <%= link_to 'Home', posts_path, :style=> 'color:#FFD700;text-decoration: none;padding: 5px;' %>
        </div>
        <div class="link-profile">
          <%= link_to "#{current_user.firstname}", user_path(current_user), :style=> 'color:#FFD700;text-decoration: none;padding: 5px;' %>
        </div>
        <div class="link-requests">
          <%= link_to 'Friend Requests', requests_path, :style=> 'color:#FFD700;text-decoration: none;padding: 5px;' %>
        </div>
        <div class="link-signout">
          <%= link_to 'Log out', logout_path, :style=> 'color:#FFD700;text-decoration: none;padding: 5px;' %>
        </div>
    </div>
    <div class="body-content">
      <div class="new-post">
        <%= render 'form', post: @post %>
      </div>
      <div id="posts", class="posts">
          <%= render @posts %>
      </div>
      <div id="infinite-scrolling">
        <%= will_paginate @posts %>
      </div>
    </div>
</div>
